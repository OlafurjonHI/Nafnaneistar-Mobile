<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        tools:context="xyz.nafnaneistar.activities.NavbarFragment">

        <!-- TODO: Update blank fragment layout -->

        <Button
            android:id="@+id/btnNavToggle"
            android:layout_width="90dp"
            android:layout_height="89dp"
            android:background="@drawable/ic_launcher_foreground"
            android:backgroundTint="#020202"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.968"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.018" />

        <TextView
            android:id="@+id/textView8"
            style="@style/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            android:text="@string/navMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.915"
            app:layout_constraintStart_toEndOf="@+id/navViewDrawer"
            app:layout_constraintTop_toBottomOf="@+id/btnNavToggle"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navViewDrawer"
            android:layout_width="232dp"
            android:layout_height="512dp"
            android:background="@color/nav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:focusable="true"
                android:importantForAccessibility="yes"
                android:layoutDirection="inherit"
                android:orientation="vertical"
                android:padding="8dp"
                android:showDividers="beginning|end"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/tvSearchName"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/navbarSearchname"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:drawableRightCompat="@android:drawable/btn_plus" />

                <TextView
                    android:id="@+id/tvSwipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/navbarSwipe"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:drawableRightCompat="@android:drawable/checkbox_on_background" />

                <TextView
                    android:id="@+id/tvViewLiked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/navbarvviewliked"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:drawableRightCompat="@android:drawable/btn_star_big_on" />

                <TextView
                    android:id="@+id/tvLinkPartner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/navbarLinkPartner"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:drawableRightCompat="@android:drawable/ic_menu_myplaces" />

                <TextView
                    android:id="@+id/tvSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/navbarSettings"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:drawableRightCompat="@android:drawable/ic_menu_manage" />
            </LinearLayout>
        </com.google.android.material.navigation.NavigationView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>